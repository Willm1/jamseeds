<div class="form-group msg-form">
  <%= simple_form_for [@single_room, @message],
    html: {class: "d-flex", autocomplete: 'off'},
    data: { controller: "reset-form", action: "turbo:submit-start->reset-form#reset" } do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Message...",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
