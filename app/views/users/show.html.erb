<div class="container">
  <p><%= link_to 'Back to profiles', users_path %></p>

  <h1><%= @user.full_name.capitalize %></h1>
  <p><%= @user.city %></p>
  <p><%= @user.updated_ability.capitalize %></p>
  <% if @user.dob.present? %>
    <p>Age: <%= @user.age %></p>
  <% end %>

  <h6>Instruments:</h6>
  <% if @user.user_instruments.empty? %>
    <p>It's empty</p>
  <% else %>
    <ul>
      <% @user.user_instruments.each do |user_instrument| %>
        <li>
          <%= user_instrument.instrument.name %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <h6>Genres:</h6>
  <ul>
    <% @user.user_genres.each do |user_genre| %>
      <li>
        <%= user_genre.genre.name %>
      </li>
    <% end %>
  </ul>
</div>
