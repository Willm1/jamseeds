  <div style="height: 300px; background-position: center; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @user.banner_img_url %>')"></div>
    <div style="position:absolute; left: 350px; top: 300px;">

      <%# User profile image %>
      <div class="profile__image">
         <%= render "shared/photo" %>
      </div>
    </div>


  <div class="container margin-top w-75">
    <div class="card card-jamseeds h-100 card-margin">

        <div class="border-bottom">
          <h1 class="text-black fw-semibold"><%= @user.first_name.blank? ? "" : @user.full_name %></h1>
        </div>

      <ul class="list-unstyled d-flex mt-3">
      <div>
        <li><i class="fa-solid fa-location-dot p-3"></i><%= @user.city.blank? ? "" : "#{@user.city}, Portugal" %></li>
        <li><i class="fa-solid fa-cake-candles p-3"></i><%= @user.age.blank? ? "" : "#{@user.age} years old" %></li>
        <li><i class="fa-solid fa-venus-mars p-3"></i><%= @user.gender.blank? ? "" : "#{@user.gender.capitalize}" %></li>
      </div>
      <div>
        <li><i class="fa-sharp fa-solid fa-building-columns p-3 left-margin"></i><%= "#{@user.updated_ability.capitalize}" %></li>
        <li><i class="fa-solid fa-guitar p-3 left-margin"></i>
          <% if @user.user_instruments.empty? %>
            User yet to add instrument
          <% else %>
            <% instrument = @user.user_instruments.map do |user_instrument| %>
              <% user_instrument.instrument.name.capitalize %>
            <% end %>
              <%= instrument.to_sentence %>
          <% end %>
        </li>
        <li class="ml-1"><i class="fa-solid fa-music p-3 left-margin"></i>
          <% if @user.user_genres.empty? %>
            User yet to add instrument
          <% else %>
            <% genre = @user.user_genres.map do |user_genre| %>
              <% user_genre.genre.name.capitalize %>
            <% end %>
              <%= genre.to_sentence %>
          <% end %>
        </li>
      </div>
      </ul>
      <div>
        <h5 class="card-body-title fw-semibold"><%= "About #{@user.first_name.capitalize}"  %></h5>
        <p><%= @user.bio %></p>
        <%= link_to "Message", start_chat_path(id: @user), class:"btn btn-primary mt-2" %>
      </div>
    </div>

  </div>


<div class="back-to-profile margin-top-bottom"><h6><%= link_to 'Back to profiles', users_path %></h6></div>
