  <div style="height: 300px; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path("v7e9nvq7cuv28vpn5nj0.jpg", height: 300, crop: :fill) %>')"></div>
    <div style="position:absolute; left: 200px; top: 300px;">
      <div class="profile__image">
        <div class="card-body__imagelg"></div>
      </div>
    </div>


  <div class="container margin-top w-75">
    <div class="card card-jamseeds h-100">
      <div class="card-body">
        <div class="card-title border-bottom">
           <h1><%= @user.first_name.blank? ? "" : @user.full_name %></h1>
        </div>
      </div>
      <ul class="list-unstyled d-flex justify-content-around">
      <div>

        <li><i class="fa-solid fa-location-dot p-2 ml-2"></i><%= @user.city.blank? ? "" : "#{@user.city}, Portugal" %></li>
        <li><i class="fa-solid fa-cake-candles p-2 ml-2"></i><%= @user.age.blank? ? "" : "#{@user.age} years old" %></li>
        <li><i class="fa-sharp fa-solid fa-building-columns p-2 ml-2"></i><%= "#{@user.updated_ability.capitalize}" %></li>
      </div>
      <div class=>
        <li><i class="fa-solid fa-guitar p-2"></i>
          <% if @user.user_instruments.empty? %>
            <p>User yet to add instrument</p>
          <% else %>
            <% instrument = @user.user_instruments.map do |user_instrument| %>
              <% user_instrument.instrument.name.capitalize %>
            <% end %>
              <%= instrument.to_sentence %>
          <% end %>
        </li>
        <li><i class="fa-solid fa-music p-2"></i>
          <% if @user.user_genres.empty? %>
            <p>User yet to add instrument</p>
          <% else %>
            <% genre = @user.user_genres.map do |user_genre| %>
              <% user_genre.genre.name.capitalize %>
            <% end %>
              <%= genre.to_sentence %>
          <% end %>
        </li>
      </div>
      </ul>
      <div class="p-4">
        <h5><%= "About #{@user.first_name.capitalize}"  %></h5>
        <p><%= @user.bio %></p>
        <%= link_to "Message", start_chat_path(id: @user), class:"btn btn-primary" %>
      </div>
    </div>

  </div>


<div class="back-to-profile mb-5"><h6><%= link_to 'Back to profiles', users_path %></h6></div>
