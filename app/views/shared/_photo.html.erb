<% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, width: 150, height: 150, gravity: "face", crop: :thumb, class: "rounded-circle border-2 border card-body__imagelg @user.online? ? 'border green-border' : '' " %>
<% else %>
  <img class="card-body__imagelg <%= @user.online? ? 'border green-border' : '' %>" src="<%= @user.profile_img_url %>" alt="">
<% end %>
